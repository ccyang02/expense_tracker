<div class="container input-container mt-5" style="max-width: 720px;">
  <div class="row justify-content-center">
    <div class="col-6 my-2 mb-3">
      <div class="dropdown dropdown-filter">
        <button class="btn btn-secondary dropdown-toggle index-dropdown" type="button" data-toggle="dropdown">
          類別
        </button>
        <div class="dropdown-menu">
          {{#each categories}}
          <a class="dropdown-item category-item"
            href="/index?queryCate={{this.code}}&queryTimestamp={{../queryTimestamp}}"><i
              class="{{this.icon}} fa-sm mr-2"></i>{{this.name}}</a>
          {{/each}}
        </div>
      </div>

      <div class="dropdown dropdown-filter mt-2">
        <button class="btn btn-secondary dropdown-toggle index-dropdown" type="button" data-toggle="dropdown">
          年月
        </button>
        <div class="dropdown-menu dropdown-time" style="height: 200px; overflow:auto">
          <a class="sample-time-query" href="/index?queryCate={{queryCate}}" style="visibility: hidden"></a>2020-11
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-6">
      <div class="d-flex justify-content-between">
        <div>總金額：</div>
        <div class="total-amount flex-grow-1 text-center">{{totalAmount}}</div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="offset-3 col-9">
      <hr style="width: 66.7%; margin-left:0;">
      {{#each records}}
      <div class="row my-2">
        <div class="col-6">
          <div class="d-flex align-items-center">
            <div class="index-icon text-right"><i class="{{this.icon}} fa-lg"></i></div>
            <div class="ml-2">
              <div class="d-flex flex-column">
                <div>{{this.name}}<span class="pl-1"><small
                      style="color:cornflowerblue">{{this.merchant}}</small></span>
                </div>
                <div class="unix-timestamp" style="font-size: 0.5rem;">{{this.date}}</div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-2 align-self-center text-right">
          {{this.amount}}
        </div>

        <div class="col-4 align-self-center">
          <a href="/record/edit/{{this._id}}" class="btn btn-sm btn-outline-success">修改</a>
          <form action="/record/delete/{{this._id}}?_method=DELETE" method="post" style="display: inline;">
            <button class="btn btn-sm btn-outline-danger" type="submit"
              onclick="return confirm('確定刪除這筆紀錄嗎？')">刪除</button>
          </form>
        </div>
      </div>
      <hr style="width: 66.7%; margin-left:0;">
      {{/each}}
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-6 my-4 text-center">
      <a href="/record/new" class="btn btn-primary">新增支出</a>
    </div>
  </div>
</div>