<div class="d-flex flex-row">
  <div class="left-background"></div>
  <div class="right-background">
    <form action="/user/register" method="post">
      <div class="d-flex flex-column align-items-center">
        <div class="p-2 user-title">Sign Up</div>
        <div class="p-2 ">
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control user-input-email user-input-shape" name="email" id="email" required>
          </div>
        </div>
        <div class="p-2 ">
          <div class="form-group">
            <label for="name">Username</label>
            <input type="name" class="form-control user-input-name user-input-shape" name="name" id="name">
          </div>
        </div>
        <div class="p-2">
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control user-input-password user-input-shape" name="password"
              id="password" minlength="4" maxlength="8" required>
          </div>
        </div>
        <div class="p-2">
          <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" class="form-control user-input-confirmPassword user-input-shape"
              name="confirmPassword" id="confirmPassword" minlength="4" maxlength="8" required>
          </div>
        </div>
        <div class="p-2">
          <input class="btn btn-primary user-input-shape" type="submit" value="SIGN UP">
        </div>
        <div class="p-2">Have an Account?<a href="/user/login">Login</a></div>
      </div>
    </form>
    {{> message}}
  </div>
</div>