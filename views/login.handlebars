<div class="d-flex flex-row">
  <div class="left-background"></div>
  <div class="right-background">
    <form action="/user/login" method="post">
      <div class="d-flex flex-column align-items-center">
        <div class="p-2 user-title">Login</div>
        <div class="p-2 ">
          <div class="form-group">
            <label for="user-input-email">Email address</label>
            <input type="email" class="form-control user-input-email user-input-shape" id="user-input-email">
          </div>
        </div>
        <div class="p-2">
          <div class="form-group">
            <label for="user-input-password">Password</label>
            <input type="password" class="form-control user-input-password user-input-shape" id="user-input-password">
          </div>
        </div>
        <div class="p-2">
          <input class="btn btn-primary user-input-shape" type="submit" value="LOGIN">
        </div>
        <div class="p-2">Have no account? <a href="">Register</a></div>
      </div>
    </form>
  </div>
</div>