<form action="/record/edit/{{data._id}}?_method=PUT" method="POST">
  <div class="container mt-5 px-5 py-3 input-container" style="max-width: 500px; ">
    <div class="row my-3">
      <div class="col-12 font-weight-bold text-center" style="font-size: 1.5rem;">請輸入你的支出</div>
    </div>
    <hr />
    <div class="row my-3 mt-4">
      <div class="col-3 align-self-center text-right">名稱*：</div>
      <div class="col-8">
        <input type="text" name="name" placeholder="開銷名稱" value="{{data.name}}" class="form-control">
      </div>
    </div>
    <div class="row my-2">
      <div class="col-3 align-self-center text-right">日期*：</div>
      <div class="col-8">
        <input type="text" name="date" placeholder="YYYY/MM/DD" value="{{data.date}}" class="form-control">
      </div>
    </div>
    <div class="row my-2">
      <div class="col-3 align-self-center text-right">類別*：</div>
      <div class="col-8 my-2">
        <select class="form-control" class="dropdown btn brn-primary" name="category" value="{{data.category}}">
          {{#each categories}}
          <option value="{{this.code}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row my-2">
      <div class="col-3 align-self-center text-right">金額*：</div>
      <div class="col-8">
        <input type="text" name="amount" value="{{data.amount}}" class="form-control">
      </div>
    </div>

    <div class="row my-2 mt-5 justify-content-center">
      <button type="submit" class="btn btn-primary">確認修改</button>
    </div>
  </div>
</form>