<form action="/record/edit/{{data._id}}?_method=PUT" method="POST">

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">名稱</span>
    </div>
    <input type="text" name="name" value="{{data.name}}" class="form-control">
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">日期</span>
    </div>
    <input type="text" name="date" value="{{data.date}}" class="form-control">
  </div>

  <select class="dropdown" name="category" value="{{data.category}}">
    {{#each categories}}
    <option value="this.code">{{this.name}}</option>
    {{/each}}
  </select>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">$</span>
      <span class="input-group-text">0.00</span>
    </div>
    <input type="text" name="amount" value="{{data.amount}}" class="form-control">
  </div>

  <button type="submit" class="btn btn-primary">確認修改</button>
</form>